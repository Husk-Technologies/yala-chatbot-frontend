# Twilio inbound webhook (WhatsApp)
# NOTE: this server can run without these unless you enable signature verification.
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=
VERIFY_TWILIO_SIGNATURES=0

# Optional: interactive menu via Twilio Content API (requires a Content template with buttons)
INTERACTIVE_MENU_MODE=off
TWILIO_CONTENT_SID_MENU=

# Public base URL reachable by Twilio (required to send brochure media)
# Example (ngrok): https://xxxxxx.ngrok-free.app
PUBLIC_BASE_URL=

# Server
PORT=5000
SESSION_TTL_SECONDS=1500

# Channel selection
CHANNEL=meta
ENABLE_TWILIO_WEBHOOK=0

# Backend
# Example: https://yala-api.example.com/
BACKEND_BASE_URL=
BACKEND_TIMEOUT_SECONDS=15

# Optional: if your backend requires Authorization: Bearer <token>
BACKEND_AUTH_BEARER_TOKEN=

# Optional defaults used until backend event endpoints are available
DEFAULT_EVENT_NAME=Yala Event
DEFAULT_EVENT_LOCATION=
DEFAULT_EVENT_LOCATION_URL=

# Optional: enable the old LLM agent path (not used in Phase 1)
ENABLE_AGENT=0
GROQ_API_KEY=

# Meta WhatsApp Cloud API
META_API_VERSION=v20.0
META_WA_ACCESS_TOKEN=
META_WA_PHONE_NUMBER_ID=
META_WEBHOOK_VERIFY_TOKEN=
META_APP_SECRET=
VERIFY_META_SIGNATURES=1
